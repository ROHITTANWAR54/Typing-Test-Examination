@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "Registration";
}
@model TypingTestExamination.Models.Account

    <center>

        <h1 style="color:red">Candidate registration</h1>
        <form method="post" asp-controller="Account" asp-action="add">
            <table cellpadding="2" cellspacing="2">
                <tr>
                    <td><font size="4">Name</font></td>
                    <td>
                        <input asp-for="Name" style="width:200px;height:30px" />
                    </td>
                    <td>
                        <span asp-validation-for="Name"></span>
                    </td>
                </tr>

                <tr>
                    <td><font size="4">Father Name: </font></td>
                    <td>
                        <input asp-for="Father" style="width:200px;height:30px" />
                    </td>
                    <td>
                        <span asp-validation-for="Father"></span>
                    </td>
                </tr>
                <tr>
                    <td><font size="4">Email:</font></td>
                    <td>
                        <input asp-for="Email" style="width:200px;height:30px" />
                    </td>
                    <td>
                        <span asp-validation-for="Email"></span>
                    </td>
                </tr>
                <tr>
                    <td><font size="4">Password:</font></td>
                    <td>
                        <input asp-for="Password" type="password" style="width:200px;height:30px" />
                    </td>
                    <td>
                        <span asp-validation-for="Password"></span>
                    </td>
                </tr>
                <tr>
                    <td><font size="4">Birth:</font></td>
                    <td>
                        <input type="date" asp-for="Birth" style="width:200px;height:30px" />
                    </td>
                    <td>
                        <span asp-validation-for="Birth"></span>
                    </td>
                </tr>
                <tr>
                    <td><font size="4">Gender:</font></td>
                    <td>
                        <input type="radio" asp-for="Gender" value="Male" style="width:20px;height:20px" />Male
                        <input type="radio" asp-for="Gender" value="Female" style="width:20px;height:20px" />Female
                    </td>
                    <td>
                        <span asp-validation-for="Gender"></span>
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>
                        <br>
                        <input type="submit" value="Save" style="width:100px;height:30px" />
                    </td>
                </tr>

            </table>
        </form><br>

        <a asp-controller="Account" asp-action="Login">Sign In</a>
    </center>