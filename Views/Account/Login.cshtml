@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "Login";
}

<html>
<head>
    <script src="~/js/login.js" type="text/javascript"></script>
</head>
<body>
<center>
    
    <h1 style="color:green">Candidate Login<img src="~/images/key1.png"  width="5%" height="5%"></h1>
    <form asp-action="login" asp-controller="account" method="post" name="myform" OnSubmit="return (validate());">
        <table>
            <tr>
                <td><font size="4">Email</font></td>
                <td>
                    <input name="Email" style="width:200px;height:30px" />
                </td>
            </tr>
            <tr>
                <td><font size="4">Password</font></td>
                <td>
                    <input type="password" name="Password" style="width:200px;height:30px" />
                </td>

            </tr>
            <tr>
                <td>&nbsp;</td>
                <td align="center">
                    <br>
                    <input type="submit" value="Login" style="width:100px;height:30px" />
                </td>
            </tr>
        </table>
    </form><br><br>
    <a asp-controller="Account" asp-action="Add"><font>Sign Up</font></a>
</center>
</body>
</html>